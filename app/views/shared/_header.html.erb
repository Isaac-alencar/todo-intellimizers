<header class="flex items-center justify-between p-4 bg-floor-2">
  <h2 class="text-slate-200">
    <%= link_to 'todo-list app', root_path %>
  </h2>
  <nav class="flex gap-2">
    <span class="hover:text-text-primary cursor-pointer">
      <%= link_to 'my todos', '/users/todos' %>
    </span>
    <% if current_user %>
      <%= button_to "logout", destroy_user_session_path, 
                              method: :delete, 
                              class: "hover:text-text-primary cursor-pointer" %>
    <% else %>
      <%= button_to "log in", new_user_session_path, 
                            method: :get, 
                            class: "hover:text-text-primary cursor-pointer" %>
    <% end %>
  </nav>
</header>
