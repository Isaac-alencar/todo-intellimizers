<div class="app-container">
  <h2 class="text-2xl text-[#ababb6]">Log in</h2>
  <%= form_for(resource, 
               as: resource_name,
               url: session_path(resource_name),
               html: { class: 'w-full' }) do |f|
    %>
  <div class="flex flex-col my-4 relative">
    <%= f.label :email, class: 'absolute left-2 py-1 text-sm text-[#ababb6]' %>
    <%= f.email_field :email, autofocus: true,
                      class: 'bg-[#373740] border-t-0 border-l-0 border-r-0 border-b-2 border-b-[#ababb6] pt-6' %>
  </div>
  <div class="flex flex-col my-4 relative">
    <%= f.label :password, class: 'absolute left-2 py-1 text-sm text-[#ababb6]' %>
    <%= f.password_field :password, class: 'bg-[#373740] border-t-0 border-l-0 border-r-0 border-b-2 border-b-[#ababb6] pt-6' %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="flex items-center my-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'ml-4 text-[#ababb6]' %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", class: 'button mt-5 hover:cursor-pointer' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
